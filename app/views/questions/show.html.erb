<h1><%= @question.title %></h1>
<div class="row">
  <div class="col-md-8">
    <%= @question.body %>
  </div>
  <div class="col-md-8">
    <%= "Question resolved?:  #{@question.resolved}"%>
  </div>
<div class="col-md-4">
  <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
  <%= link_to "Delete", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
</div>
</div>
